<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/dark_grey" />
            <stroke android:color="@color/dark_grey" />
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp" />


        </shape>
    </item>
    <item android:gravity="bottom" android:left="16dp" android:right="16dp">
        <shape>
            <size android:height="1.5dp" />
            <stroke
                android:color="@color/grey_divider"
                android:dashWidth="1dp"
                android:dashGap="1dp"
                android:width="1dp"
                />
        </shape>
    </item>
</layer-list>