<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:background="@color/dark_grey">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconHeadlineItemImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_article_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/newsHomeHeadlineShortTitleTextView"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/newsHomeHeadlineShortTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_semi_bold"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:lineHeight="28dp"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/iconHeadlineItemImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Sources: O'Brien returns to Patriots as new OC "
        />



</androidx.constraintlayout.widget.ConstraintLayout>